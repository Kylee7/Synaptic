# Synaptic Environment Configuration
# Copy this file to .env and update with your actual values

# Basic Configuration
NODE_ENV=development
SYNAPTIC_HOST=localhost
SYNAPTIC_PORT=3000

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/synaptic.db

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
CURSOR_API_KEY=your_cursor_api_key_here
WINDSURF_API_KEY=your_windsurf_api_key_here

# Blockchain Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=your_solana_private_key_here
SYNA_TOKEN_MINT=your_token_mint_address_here

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
SYNAPTIC_JWT_SECRET=your_jwt_secret_key_here

# Storage Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# PostgreSQL Configuration (optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=synaptic
POSTGRES_USER=synaptic_user
POSTGRES_PASSWORD=your_postgres_password_here

# Monitoring and Analytics
LOG_LEVEL=info
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_api_key_here

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Development Configuration
DEBUG=synaptic:*
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Server Configuration
SYNAPTIC_DB_TYPE=sqlite
SYNAPTIC_DB_PATH=./data/synaptic.db

# AI Configuration
SYNAPTIC_AI_PROVIDER=openai
SYNAPTIC_AI_TIMEOUT=30000
SYNAPTIC_AI_MAX_RETRIES=3

# Blockchain Configuration
SYNAPTIC_BLOCKCHAIN_NETWORK=devnet
SYNAPTIC_BLOCKCHAIN_RPC_URL=https://api.devnet.solana.com
SYNAPTIC_PROGRAM_ID=SynapticProgram1111111111111111111111111

# Privacy and Security
SYNAPTIC_ENCRYPTION_KEY=your_32_character_encryption_key_here
SYNAPTIC_JWT_SECRET=your_jwt_secret_key_here
SYNAPTIC_KEY_DERIVATION_ITERATIONS=100000

# Logging Configuration
SYNAPTIC_LOG_LEVEL=info
SYNAPTIC_LOG_FILE=./logs/synaptic.log

# Performance Configuration
SYNAPTIC_CACHE_SIZE=1000
SYNAPTIC_CACHE_TTL=3600000
SYNAPTIC_MAX_CONNECTIONS=10

# Optional: External Services
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Optional: Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here

# Optional: Email Configuration (for notifications)
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password_here

# Optional: Webhook Configuration
WEBHOOK_URL=https://your-domain.com/webhooks

# Optional: Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Optional: Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups 